extends layout

block head
  script(type="text/javascript" src="/js/jquery-3.2.1.min.js" charset="utf-8")
  script(type="text/javascript" src="/js/bootstrap.min.js" charset="utf-8")
  link(rel="stylesheet", href="/css/bootstrap.min.css")
  link(rel="stylesheet", href="/css/bootstrap-theme.min.css")

block content
  div.container
    #form
      h1.text-center Login to your account
      hr
      form#login(action='/login', method="post")
        .form-group.text-center
          label Username: 
          input(type='text', name="username")
        .form-group.text-center
          label Password: 
          input(type='password', name="password")
        button#login_submit.btn.btn-primary.btn-block(type='submit')
          i.icon-ok.icon-white
          |  Connect
        hr
        button.btn.btn-success.btn-block(type='button', onclick='location.href="/signup"') Sign up